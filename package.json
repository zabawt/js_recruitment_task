{
  "name": "recruitment_boilerplate",
  "version": "1.0.0",
  "description": "Startup House recruitment boilerplate",
  "repository": {
    "type": "git",
    "url": "git@github.com:startupdevhouse/js_recruitment_task.git"
  },
  "license": "UNLICENSED",
  "scripts": {
    "dev": "parcel serve src/index.html --port 8080"
  },
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "parcel": "^2.0.0-beta.1",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
